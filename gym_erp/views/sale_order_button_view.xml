<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_button_inherit_view" model="ir.ui.view">
        <field name="name">sale.order.button.inherit.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position='inside'>
                <button name="%(gym_erp.order_wizard_action_record)d" string="Update Order" type="action" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>